---
const { toggle } = Astro.props;
const hourClasses = toggle === "hour" ? "hour active" : "hour";
const dayClasses = toggle === "day" ? "day active" : "day";
const weekClasses = toggle === "week" ? "week active" : "week";
---

<nav>
  <div class={hourClasses}>
    <a href="/hour/"
      ><span class="icon">🔥</span> <span class="label">Past Hour</span></a
    >
  </div>
  <div class={dayClasses}>
    <a href="/"
      ><span class="icon">⏰</span> <span class="label">Past Day</span></a
    >
  </div>
  <div class={weekClasses}>
    <a href="/week/"
      ><span class="icon">🗓️</span> <span class="label">Past Week</span></a
    >
  </div>
</nav>
