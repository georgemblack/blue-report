---
import Layout from "../layouts/Layout.astro";
import { fetchTopSites } from "../util/Data";
import { formatCount, formatDate } from "../util/Format";

import "../styles/global.css";
import "../styles/sites.css";
import Footer from "../components/Footer.astro";

const snapshot = await fetchTopSites();
---

<Layout subtitle="The top sites on Bluesky, updated daily">
  <div class="container-group">
    {
      snapshot.sites.map((site) => (
        <div class="container">
          <div class="site">
            <h2>
              {site.rank}. {site.name}
            </h2>
            <div class="interactions">
              <p>{formatCount(site.interactions)} interactions over 30 days </p>
              <div class="help">
                <div class="label">?</div>
                <div class="contents">
                  <p>
                    The number of posts referencing a URL, combined with the
                    number of reposts & likes on those posts.
                    <a href="#">Learn more.</a>
                  </p>
                </div>
              </div>
            </div>
            <h3>Top Links</h3>
            <div class="top-links">
              {site.links.map((link) => (
                <div class="top-link card">
                  <figure>
                    <img
                      src={`https://assets.theblue.report/thumbnails/${link.thumbnail_id}.jpg`}
                    />
                  </figure>
                  <div class="details">
                    <h3>
                      <a href={link.url}>{link.title}</a>
                    </h3>
                    <p>
                      {formatCount(link.interactions)} interactions over 30 days
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <p class="last-updated">Last updated {formatDate(snapshot.generated_at)}</p>
  <Footer />
</Layout>
