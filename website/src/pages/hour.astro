---
import "../styles/report.css";

import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { fetchTopLinks } from "../util/Data";
import LinkReport from "../components/LinkReport.astro";

const snapshot = await fetchTopLinks();
---

<Layout>
  <LinkReport
    links={snapshot.top_hour}
    toggle="hour"
    generatedAt={snapshot.generated_at}
  />
  <Footer />
</Layout>
